<div class="element">
<h2 class="title"><%= @post.title %> </h2>
<img class="image" src="<%= @post.image %>"><br />
<img class="userImage" src="<%= @post.user.image %>">
<h4>By: <%= @post.user.name %></h4>
<h4>Created At: <%= @post.created_at %>, Last Update: <%= @post.updated_at %></h4>
<hr />
<p> <%= @post.content %> </p>
<% if current_user && current_user == @post.user %>
  <br />
  <%= link_to "Edit Post", edit_post_path(@post) %>
  <%= link_to "Delete Post", post_path(@post), method: :delete %>
<% end %>
</div>

<div class="element barrier">
<h3>Comments</h3>
  <% if current_user %>
    <br />
    <%= link_to "Add A New Comment!", new_post_comment_path(@post) %>
  <% end %>
</div>

<% @post.comments.each do |comment| %>
  <div class="comment">
    <img class="userImage" src="<%= comment.user.image %>">
    <h4>By: <%= comment.user.name %></h4>
    <h4>Created At: <%= comment.created_at %>, Last Update <%= comment.updated_at %></h4>
    <hr />
    <p><%= comment.content %></p>
    <% if current_user && current_user == comment.user %>
      <br />
      <%= link_to "Edit", edit_post_comment_path(@post, comment) %> |
      <%= link_to "Delete", post_comment_path(@post, comment), method: :delete %>
      <% end %>
  </div>
<% end %>
