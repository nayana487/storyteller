<article class="postArticle">
<div class="postShow">
<h2 class="postTitle"><%= @post.title %> </h2>
<img class="postImage" src="<%= @post.image %>"><br />
<img class="postUserImage" src="<%= @post.user.image %>">
<h4>By: <%= @post.user.name %></h4>
<h4>Created At: <%= @post.created_at %></h4>
<hr />
<p> <%= @post.content %> </p>
<% if current_user && current_user == @post.user %>
  <%= link_to "Edit Post", edit_post_path(@post) %>
  <%= link_to "Delete Post", post_path(@post), method: :delete %>
<% end %>
</div>

<h3>Comments</h3>
  <% if current_user %>
    <%= link_to "Add New Comment!", new_post_comment_path(@post) %>
  <% end %>

  <% @post.comments.each do |comment| %>
    <div class="comment">
      <time>Added by <%= comment.user.name %> at <%= comment.updated_at %></time>
      <p><%= comment.content %></p>
      <% if current_user && current_user == comment.user %>
        <%= link_to "Edit", edit_post_comment_path(@post, comment) %> |
        <%= link_to "Delete", post_comment_path(@post, comment), method: :delete %>
        <% end %>
    </div>
  <% end %>

</article>
